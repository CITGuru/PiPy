BoxLayout:
    id: main_wrapper
    BoxLayout:
        orientation: 'vertical'
        Toolbar:
            id: toolbar
            title: app.title
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            theme_text_color: 'Custom'

            BoxLayout:
                MDTextField:
                    hint_text: "Search for packages"
                    theme_text_color: 'Accent'
                    color_mode: 'custom'
                    line_color_focus: self.theme_cls.opposite_bg_normal
                
                MDIconButton:
                    icon: "magnify"

        ScreenManager:
            id: scr_mngr
            Screen:
                name: 'main'
                ScrollView:
                    do_scroll_x: False
                    
